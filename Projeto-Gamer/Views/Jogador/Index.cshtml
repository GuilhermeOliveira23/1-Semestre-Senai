</select>
<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Senha</th>
        <th>IdEquipe</th>

    </thead>


    <tbody>

        @foreach (Jogador jogador in ViewBag.Jogador)
        {
            <tr>

                
                <td>@jogador.IdJogador</td>
                <td>@jogador.Nome</td>


                <td>@jogador.Email</td>
                <td>@jogador.Senha</td>
                <td>@jogador.IdEquipe</td>

            </tr>
        }
    </tbody>

</table>