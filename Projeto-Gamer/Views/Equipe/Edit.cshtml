@model Equipe 

@{
    ViewData["Title"] = "Edit";
}

<h2>Edição de Equipes</h2>
@*Tem que ter enctype se tiver uma imagem dentro do formulario*@
@*coloca no method post, se não ele funciona como get *@
@*  *@
@if (ViewBag.UserName == null)
{
    <h2>Faça o login primeiro!!!</h2>
}
else{
     <form method="post" action="@Url.Action("Atualizar")"  enctype="multipart/form-data"> 

<input type="hidden" name = "IdEquipe" value = "@ViewBag.Equipe.IdEquipe">

<label for="">Nome</label>
<input type="text" name="Nome" value=" @ViewBag.Equipe.Nome" required>
 
<label for="">Imagem</label>
<input type="file" name="Imagem" value="@ViewBag.Equipe.Imagem" >


<button type="submit">Atualizar</button>





</form>
}
